query getTopicsAfterTimestamp(timestamp) {
    return topic @* { 
        .lastModified > timestamp
    }(
        .id,
        author=.author.name,
        .title,
        .message,
        -sort .lastModified,
        .timestamp
    );
}

query getTopicsPriorToTimestamp(timestamp) {
    return topic @* { 
        .lastModified < timestamp
    }(
        .id,
        author=.author.name,
        .title,
        .message,
        -sort .lastModified,
        .timestamp
    );
}

query getTopicReplies(topicId: text) {
    return topicReply@*{
        topic@{ .id == topicId }
    }(
        .id,
        author=.author.name,
        .message,
        -sort .timestamp
    );
}

query getTopicsByUserIdPriorToTimestamp(name, timestamp) {
    return topic@*{
        user@{ .name == name },
        .lastModified < timestamp
    }(
        .id,
        author=.author.name,
        .title,
        .message,
        -sort .lastModified,
        .timestamp
    );
}

query getTopicsFromFollowsAfterTimestamp(name, timestamp) {
    return topic@*{
        follow@{ .follower.name == name } ( .follows ),
        .lastModified > timestamp
    }(
        .id,
        author=.author.name,
        .title,
        .message,
        -sort .lastModified,
        .timestamp
    );
}

query getTopicsFromFollowsPriorToTimestamp(name, timestamp) {
    return topic@*{
        follow@{ .follower.name == name } ( .follows ),
        .lastModified < timestamp
    }(
        .id,
        author=.author.name,
        .title,
        .message,
        -sort .lastModified,
        .timestamp
    );
}

query getTopicById(id: text) {
    return topic@{
        .id == id
    }(
        .id,
        author=.author.name,
        .title,
        .message,
        -sort .lastModified,
        .timestamp
    );
}