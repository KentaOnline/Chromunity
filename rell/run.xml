<run wipe-db="false">
    <nodes>
        <config src="config/node-config.properties" add-signers="true" />
    </nodes>
    <chains>
        <chain name="user" iid="1">
            <config height="0">
                <app module="">
                	<args module="lib.ft3.core">
                		<arg key="my_blockchain_name"><string>Chromunity</string></arg>
                		<arg key="my_blockchain_website"><string>dev.chromunity.com</string></arg>
                		<arg key="my_blockchain_description"><string>Decentralized reddit</string></arg>
                  		<arg key="request_max_count"><int>10</int></arg> <!-- maximum amount of request credit that is possible to keep -->
                  		<arg key="request_recovery_time"><int>5000</int></arg> 
                	</args>
                </app>
            </config>
        </chain>
    </chains>
</run>